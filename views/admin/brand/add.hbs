<div class="container mt-4">
   <a class="btn btn-secondary mb-2" href="/brand" onclick="return confirm('You want to exit without saving?')">Back to
      List</a>

   <form class="mb-3" action="/brand/add" method="post">
      <h1 class="mb-4">Add New Brand</h1>

      <div class="mb-3">
         <label for="name" class="form-label">Brand name:</label>
         <input type="text" class="form-control" name="name" id="name" required>
      </div>

      <div class="mb-3">
         <label for="image" class="form-label">Brand image:</label>
         <input type="url" class="form-control" name="image" id="image" required>
      </div>

      <div class="mb-3">
         <label for="country" class="form-label">Brand Country:</label>
         <select class="form-select" name="country" id="country">
            {{#each countries }}
            <option value="{{ _id }}"> {{ name }}</option>
            {{/each}}
         </select>
      </div>

      <div class="mb-3">
         <label for="since" class="form-label">Brand year:</label>
         <input type="text" class="form-control" name="since" id="since" required>
      </div>

      <button type="submit" class="btn btn-primary">Add</button>
   </form>
</div>